<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.models %>">models</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">Edit model</a></li>
</ul>

<div class="page-header">
    <h1>Edit model</h1>
</div>

<% formFor(model, {action: pathTo.model(model), method: 'PUT', id: "model-form", class: 'form-horizontal'}, function (form) { %>
<%- partial('models/form.ejs', {locals: {form: form, model: model}}) %>
<div class="form-actions">
    <%- form.submit('<i class="icon-ok icon-white"></i> Update model', {class: 'btn btn-primary'}) %> or
    <%- linkTo('Cancel', pathTo.model(model), {class: 'btn'}) %>
</div>
<% });%>

